{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for github labels configuration.",
  "properties": {
    "strict": {
      "type": "boolean"
    },
    "labels": {
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "color": { "type": "string" }
            },
            "required": ["color"]
          },
          {
            "type": "string"
          }
        ]
      }
    },
    "repositories": {
      "additionalProperties": {
        "strict": {
          "type": "boolean"
        },
        "labels": {
          "additionalProperties": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "description": { "type": "string" },
                  "color": { "type": "string" }
                },
                "required": ["color"]
              },
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "branch": {
      "type": "string"
    }
  },
  "required": ["labels"],
  "additionalProperties": false
}
