{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for github labels configuration.",
  "properties": {
    "strict": {
      "type": "boolean"
    },
    "labels": {
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "color": { "type": "string" }
            },
            "required": ["color"]
          },
          {
            "type": "string"
          }
        ]
      }
    },
    "repositories": {
      "type": "array",
      "items": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "paths": { "type": "string" },
            "labels": {
              "additionalProperties": {
                "strict": {
                  "type": "boolean"
                },
                "labels": {
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "description": { "type": "string" },
                          "color": { "type": "string" }
                        },
                        "required": ["color"]
                      },
                      {
                        "type": "string"
                      }
                    ]
                  }
                }
              }
            },
            "strict": { "type": "boolean" }
          },
          "required": ["paths"]
        }
      ]
    },
    "publish": {
      "properties": {
        "branch": { "type": "string" }
      }
    }
  },
  "required": ["labels"],
  "additionalProperties": false
}
