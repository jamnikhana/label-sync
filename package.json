{
  "name": "label-sync",
  "repository": "https://github.com/maticzav/label-sync.git",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "build-clean": "rm -rf ./packages/*/dist",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && yarn build-clean",
    "coverage": "yarn codecov",
    "lint": "tslint packages/*/{src,tests}/*/*.ts",
    "postinstall": "yarn build",
    "publish": "yarn build-clean && yarn build && lerna publish --silent",
    "test": "yarn lint; yarn run build; yarn jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "chalk": "^2.4.2",
    "codecov": "3.1.0",
    "execa": "^1.0.0",
    "husky": "1.3.1",
    "jest": "^24.1.0",
    "jest-serializer-ansi": "^1.0.3",
    "lerna": "3.10.5",
    "prettier": "1.15.3",
    "pretty-quick": "1.8.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3333"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "server"
    ]
  }
}
